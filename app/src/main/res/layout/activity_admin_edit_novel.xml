<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AdminEditNovel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Novel"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <EditText
        android:id="@+id/judul"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:layout_marginTop="35dp"
        android:paddingStart="20dp"
        android:hint="Judul Novel"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/kotak_input"/>

    <EditText
        android:id="@+id/penulis"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:paddingStart="20dp"
        android:hint="Nama Penulis"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/kotak_input"/>

    <EditText
        android:id="@+id/tanggalTerbit"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:paddingStart="20dp"
        android:hint="Tanggal Rilis"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/kotak_input"/>

    <EditText
        android:id="@+id/isiNovel"
        android:layout_width="288dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:paddingStart="20dp"
        android:hint="Sinopsis"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/kotak_input"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_button"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginTop="35dp"
        android:text="Edit Novel"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button"/>
</LinearLayout>